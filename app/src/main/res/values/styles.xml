<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏颜色-->
        <item name="colorPrimaryDark">#059183</item>
        <!-- toolbar（actionbar）颜色-->
        <item name="colorPrimary">#06C1AE</item>
        <item name="android:textColorPrimary">@color/near_black</item>
        <item name="colorAccent">#EF9A9A</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <!-- 窗口背景-->
        <item name="android:windowBackground">@color/main_bg</item>
    </style>
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="UpDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="tool_bar_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--自定义edittext的样式-->
    <style name="my_edit_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/my_edittext_style</item>
    </style>

    <!--自定义dialog主题-->
    <style name="myDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@null</item><!--去除背景色-->
    </style>

</resources>

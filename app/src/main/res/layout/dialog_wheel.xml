<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/dialog_title_tv"
        android:text="@string/good_catalog"
        android:textSize="18sp"
        android:textColor="@color/app_theme_color2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.dreamspace.uucampus.widget.WheelView
        android:id="@+id/dialog_wheelview"
        android:layout_marginTop="14dp"
        android:background="@color/main_bg"
        android:layout_gravity="center_horizontal"
        android:layout_width="228dp"
        android:layout_height="100dp"
        app:itemNumber="3"
        app:unitHight="40dp"
        app:lineColor="@color/divider_color"
        app:lineHeight="0.5dp"
        app:normalTextColor="@color/text_normal"
        app:normalTextSize="14sp"
        app:selectedTextColor="@color/dialog_center_color"
        app:selectedTextSize="18sp"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/cancel_ll"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/button_background_selectable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/cancel"
                android:textColor="@color/black_40"
                android:textSize="18sp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@color/divider_color"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/confirm_ll"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/button_background_selectable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/confirm"
                android:textColor="@color/black_40"
                android:textSize="18sp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/good_label1"
            android:layout_marginLeft="22dp"
            style="@style/shop_management_dialog_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <com.dreamspace.uucampus.widget.WheelView
        android:id="@+id/label_wheelview"
        android:layout_marginTop="14dp"
        android:background="@color/market_fragments_bg_color"
        android:layout_gravity="center_horizontal"
        android:layout_width="228dp"
        android:layout_height="100dp"
        app:itemNumber="3"
        app:unitHight="40dp"
        app:lineColor="@color/divider_color"
        app:lineHeight="0.5dp"
        app:normalTextColor="@color/smart_tab_layout_default_text_color"
        app:normalTextSize="14sp"
        app:selectedTextColor="@color/dialog_center_color"
        app:selectedTextSize="18sp"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/label_cancel_ll"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/cancel"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                style="@style/shop_management_dialog_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="@color/divider_color"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/label_confirm_ll"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/confirm"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                style="@style/shop_management_dialog_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
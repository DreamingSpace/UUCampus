<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/custom_toolbar"></include>
    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/portrait"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/portrait"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/my_shape_circle"
                    android:layout_marginLeft="100dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/z_my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_height="0.5dp"
                android:layout_width="fill_parent"
                android:background="@color/dividingline_color"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/nick_name"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/nick_name"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textColor="@color/background_gradient_start"
                    android:paddingLeft="100dp"
                    android:background="@null"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/z_my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_height="0.5dp"
                android:layout_width="fill_parent"
                android:background="@color/dividingline_color"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/sex"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/sex"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textColor="@color/background_gradient_start"
                    android:paddingLeft="100dp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/z_my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
            android:layout_height="0.5dp"
            android:layout_width="fill_parent"
            android:background="@color/dividingline_color" />
            <View
                android:layout_height="0.5dp"
                android:layout_width="fill_parent"
                android:background="@color/dividingline_color"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/bind_phone"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/phonenum_edit"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textColor="@color/background_gradient_start"
                    android:paddingLeft="100dp"
                    android:background="@null"
                    android:phoneNumber="true"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/z_my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_height="0.5dp"
                android:layout_width="fill_parent"
                android:background="@color/dividingline_color"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/school"
                    android:layout_centerVertical="true"/>
                <Spinner
                    android:id="@+id/school"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="100dp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/z_my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_height="0.5dp"
                android:layout_width="fill_parent"
                android:background="@color/dividingline_color"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/start_school_time"
                    android:layout_centerVertical="true"/>
                <Spinner
                    android:id="@+id/time"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="100dp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/z_my_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_height="0.5dp"
                android:layout_width="fill_parent"
                android:background="@color/dividingline_color" />
            <View
                android:layout_height="0.5dp"
                android:layout_width="fill_parent"
                android:background="@color/dividingline_color"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:id="@+id/relative_weibo"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/personal_information_icon_weibo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bind"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_height="0.5dp"
                android:layout_width="fill_parent"
                android:background="@color/dividingline_color"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
            <RelativeLayout
                android:id="@+id/relative_weichat"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@color/white"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/personal_information_icon_weixin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bind"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_height="0.5dp"
                android:layout_width="fill_parent"
                android:background="@color/dividingline_color" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

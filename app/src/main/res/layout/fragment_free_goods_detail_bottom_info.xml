<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/goods_detail_bottom_linear_layout"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:padding="@dimen/activity_margin"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/free_goods_detail_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="启航教育以考研政治点晴闻
                名于江湖，而政治的复习让很多
                的学院觉得枯燥无味，启航高端
                辅导的老师们煞费苦
                心练就一身快乐本领，将考研政治的各个
                考点微化,每个考点"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/goods_detail_bottom_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/market_fragments_bg_color"
        android:gravity="center"
        android:padding="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/free_goods_detail_collect_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/free_goods_detail_bottom_collect_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xiangqing_tab_bar_collect_n" />

            <TextView
                android:id="@+id/free_goods_detail_bottom_collect_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/collect"
                android:textColor="@color/custom_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/free_goods_detail_consult_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xiangqing_tab_bar_message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/consult"
                android:textColor="@color/custom_text" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_above="@id/goods_detail_bottom_linear_layout"
        android:background="@color/divider_color"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
</RelativeLayout>
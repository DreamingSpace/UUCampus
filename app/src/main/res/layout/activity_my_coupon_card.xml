<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/custom_toolbar"/>

    <LinearLayout
        android:id="@+id/content_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:background="@drawable/green_stroke_rectangle_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/have_state_tv"
                    android:text="@string/own"
                    android:textColor="@color/search_opaque"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/yoyo_coupon"
                    android:textColor="@color/app_theme_color2"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/time_tv"
                    android:text="2015.9.30~2015.10.30"
                    android:textSize="12sp"
                    android:textColor="@color/text_normal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/title1_tv"
                    android:text="一卡在手，校园我有~"
                    android:textSize="16sp"
                    android:textColor="@color/black_40"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/title2_tv"
                    android:text="尊享各类优惠"
                    android:textSize="16sp"
                    android:textColor="@color/black_40"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/use_direction"
                    android:textColor="@color/black_40"
                    android:textSize="16sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/explain_tv"
                    android:text="分享即可拥有万能优惠卡一个月使用权。"
                    android:textColor="@color/black_40"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/green_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:src="@drawable/green_circle"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:background="@color/search_opaque"
                android:layout_marginLeft="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/share_btn"
            android:text="@string/share"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_round"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </LinearLayout>
</LinearLayout>
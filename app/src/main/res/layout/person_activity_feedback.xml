<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar"></include>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback"
            android:textSize="16sp"
            android:textColor="@color/background_gradient_start" />
        <EditText
            android:id="@+id/feedback"
            android:layout_height="200dp"
            android:layout_width="fill_parent"
            android:padding="10dp"
            style="@style/my_edit_style"
            android:hint="@string/input_feedback"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp"/>
    </LinearLayout>
    <View
        android:layout_height="0.5dp"
        android:layout_width="fill_parent"
        android:background="@color/dividingline_color" />
    <Button
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:background="@drawable/my_shape_button_commit"
        android:text="@string/commit"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="80dp"/>
</LinearLayout>

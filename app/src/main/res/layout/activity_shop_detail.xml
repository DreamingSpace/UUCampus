<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/custom_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shop_detail_image_civ"
                android:layout_gravity="center_horizontal"
                android:src="@color/search_opaque"
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/shop_name_tv"
                android:text="东大旅游吧"
                android:textColor="@color/black_40"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sale_range"
                    android:layout_marginLeft="40dp"
                    android:text="@string/sale_range"
                    android:textSize="15sp"
                    android:textColor="@color/black_40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sale_range_tv"
                    android:singleLine="true"
                    android:layout_marginRight="40dp"
                    android:text="旅游，周边游，远足"
                    android:textSize="15sp"
                    android:textColor="@color/smart_tab_layout_default_text_color"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/sale_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/sale_range"
                    android:layout_below="@id/sale_range_tv"
                    android:background="@color/divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/connect_phone"
                    android:layout_marginLeft="40dp"
                    android:text="@string/connect_phone"
                    android:textSize="15sp"
                    android:textColor="@color/black_40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/connect_phone_tv"
                    android:singleLine="true"
                    android:layout_marginRight="40dp"
                    android:text="13335656559"
                    android:textSize="15sp"
                    android:textColor="@color/smart_tab_layout_default_text_color"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/connect_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/connect_phone"
                    android:layout_below="@id/connect_phone_tv"
                    android:background="@color/divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/connect_address"
                    android:layout_marginLeft="40dp"
                    android:text="@string/connect_address"
                    android:textSize="15sp"
                    android:textColor="@color/black_40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/connect_address_tv"
                    android:singleLine="true"
                    android:layout_marginRight="40dp"
                    android:text="东大旅游吧校园团"
                    android:textSize="15sp"
                    android:textColor="@color/smart_tab_layout_default_text_color"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/connect_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/connect_address"
                    android:layout_below="@id/connect_address_tv"
                    android:background="@color/divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </RelativeLayout>

            <TextView
                android:text="@string/shop_resume"
                android:textSize="15sp"
                android:textColor="@color/black_40"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/shop_description_et"
                android:editable="false"
                android:textSize="14sp"
                android:textColor="@color/text_normal"
                android:gravity="start"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:padding="15dp"
                android:background="@drawable/shop_detail_resume_bg"
                android:layout_width="match_parent"
                android:layout_height="110dp" />

            <Button
                android:id="@+id/report_seller_btn"
                android:text="@string/report_shop"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:background="@drawable/button_round"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
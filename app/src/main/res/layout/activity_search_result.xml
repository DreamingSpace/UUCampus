<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/search_toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/search_goods_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/search_goods_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="商品"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/personal_center_item_bg"
                    android:paddingBottom="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/search_good_name_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="汤山温泉两天一夜游"
                        android:textColor="@color/good_name_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/search_good_shop_name_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/search_good_name_tv1"
                        android:layout_below="@id/search_good_name_tv1"
                        android:layout_marginTop="3dp"
                        android:singleLine="true"
                        android:text="康辉旅行社"
                        android:textColor="@color/app_theme_color2"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/search_good_price_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/search_good_name_tv1"
                        android:text="￥230"
                        android:textColor="@color/price_text_color"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/search_goods_relative"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:visibility="gone"
                    android:background="@drawable/personal_center_item_bg"
                    android:paddingBottom="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/search_good_name_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="汤山温泉两天一夜游"
                        android:textColor="@color/good_name_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/search_good_shop_name_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/search_good_name_tv2"
                        android:layout_below="@id/search_good_name_tv2"
                        android:layout_marginTop="3dp"
                        android:singleLine="true"
                        android:text="康辉旅行社"
                        android:textColor="@color/app_theme_color2"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/search_good_price_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@id/search_good_name_tv2"
                        android:text="￥230"
                        android:textColor="@color/price_text_color"
                        android:textSize="18sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/search_goods_more"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:text="查看更多相关商品"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_idle_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/search_idle_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="闲置"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/personal_center_item_bg"
                    android:paddingBottom="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/search_idle_name_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="汤山温泉两天一夜游"
                        android:textColor="@color/good_name_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/search_idle_shop_name_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/search_idle_name_tv1"
                        android:layout_below="@id/search_idle_name_tv1"
                        android:layout_marginTop="3dp"
                        android:singleLine="true"
                        android:text="康辉旅行社"
                        android:textColor="@color/app_theme_color2"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/search_idle_price_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@id/search_idle_name_tv1"
                        android:text="￥230"
                        android:textColor="@color/price_text_color"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/search_idle_relative"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/personal_center_item_bg"
                    android:paddingBottom="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/search_idle_name_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="汤山温泉两天一夜游"
                        android:textColor="@color/good_name_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/search_idle_shop_name_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/search_idle_name_tv2"
                        android:layout_below="@id/search_idle_name_tv2"
                        android:layout_marginTop="3dp"
                        android:singleLine="true"
                        android:text="康辉旅行社"
                        android:textColor="@color/app_theme_color2"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/search_idle_price_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@id/search_idle_name_tv2"
                        android:text="￥230"
                        android:textColor="@color/price_text_color"
                        android:textSize="18sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/search_idle_more"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:text="查看更多相关闲置"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_shop_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/search_shop_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="店铺"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/personal_center_item_bg"
                    android:paddingBottom="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/search_shop_name_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="汤山温泉两天一夜游"
                        android:textColor="@color/good_name_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/search_shop_main_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/search_shop_name_tv1"
                        android:layout_below="@id/search_shop_name_tv1"
                        android:layout_marginTop="3dp"
                        android:singleLine="true"
                        android:text="康辉旅行社"
                        android:textColor="@color/app_theme_color2"
                        android:textSize="11sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/search_shop_relative"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/personal_center_item_bg"
                    android:paddingBottom="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:id="@+id/search_shop_name_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:text="汤山温泉两天一夜游"
                        android:textColor="@color/good_name_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/search_shop_main_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/search_shop_name_tv2"
                        android:layout_below="@id/search_shop_name_tv2"
                        android:layout_marginTop="3dp"
                        android:singleLine="true"
                        android:text="康辉旅行社"
                        android:textColor="@color/app_theme_color2"
                        android:textSize="11sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/search_shop_more"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:text="查看更多相关店铺"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_failed_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="90dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/srarch_icon_search"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="没有找到相关商品、闲置或店铺"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/custom_toolbar"></include>
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:background="@color/white">
        <ImageView
            android:id="@+id/my_goods"
            android:layout_height="18dp"
            android:layout_width="18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/z_my_update"
            android:layout_marginLeft="30dp" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/check_update"
            android:textColor="@color/word_color"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/my_goods" />
        <ImageView
            android:layout_height="18dp"
            android:layout_width="18dp"
            android:src="@drawable/z_my_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />
    </RelativeLayout>
    <View
        android:layout_height="0.5dp"
        android:layout_width="fill_parent"
        android:background="@color/dividingline_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:background="@color/white">
        <ImageView
            android:id="@+id/uu_merchant_service"
            android:layout_height="18dp"
            android:layout_width="18dp"
            android:layout_centerVertical="true"
            android:src="@drawable/z_my_feedback"
            android:layout_marginLeft="30dp" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/feedback"
            android:textColor="@color/word_color"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/uu_merchant_service"
            android:id="@+id/textView" />
        <ImageView
            android:layout_height="18dp"
            android:layout_width="18dp"
            android:src="@drawable/z_my_arrow"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />
    </RelativeLayout>
    <View
        android:layout_height="0.5dp"
        android:layout_width="fill_parent"
        android:background="@color/dividingline_color" />
    <Button
        android:id="@+id/logout_button"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:text="@string/logout"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/z_my_shape_button_commit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/custom_toolbar"></include>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/z_my_edittext_style"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/z_my_goods_name"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/edit1"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_height="0.5dp"
            android:layout_width="fill_parent"
            android:background="@color/dividingline_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/z_my_goods_price"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/edit2"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_height="0.5dp"
            android:layout_width="fill_parent"
            android:background="@color/dividingline_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/z_my_goods_type"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/edit3"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <View
            android:layout_height="0.5dp"
            android:layout_width="fill_parent"
            android:background="@color/dividingline_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:src="@drawable/z_my_goods_introduction"/>
            <EditText
                android:id="@+id/edit4"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:paddingLeft="10dp"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/commit"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:text="@string/ok"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/z_my_shape_button_commit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
</LinearLayout>
